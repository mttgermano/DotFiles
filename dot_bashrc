#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return


# Vim mode 
set -o vi
bind -m vi-command 'Control-l: clear-screen'
bind -m vi-insert 'Control-l: clear-screen' 


# alias ls='ls --color=auto'
# PS1='[\u in \w] \n>>  '


# Launch Everything
if [[ "$(tty)" = "/dev/tty1" ]]; then
	pgrep bspwm || startx "$HOME/.xinitrc"
fi

# Starship Theme
eval "$(starship init bash)"


# aliases
#alias bat="cat /sys/class/power_supply/BAT0/capacity"
alias poweroff="sudo systemctl poweroff"
alias j="julia"
alias py="python"
alias start="source ./env/bin/activate"
alias dirfonts="cd /home/matt/.local/share/fonts/"
alias ls="lsd --group-directories-first -X"
alias ll="lsd --group-directories-first -lah"
alias cat="bat"
alias dot="chezmoi"

# Variables
#export PATH="${PATH:${PATH}:}/home/matt/.local/bin:/home/matt/.config/eww/target/release/"
export PATH="/home/matt/.local/bin/:/home/matt/.config/eww/target/release/:$PATH"
export EDITOR="/usr/bin/vim"
export BAT_THEME="Dracula"
